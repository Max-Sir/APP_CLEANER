        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_20sdp" />
            <gradient android:angle="0" android:endColor="@color/color_0379ff"
                android:startColor="@color/color_0379ff" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_20sdp" />
            <gradient android:angle="0" android:endColor="@color/color_0068DF"
                android:startColor="@color/color_0068DF" />
        </shape>
    </item>
</selector>