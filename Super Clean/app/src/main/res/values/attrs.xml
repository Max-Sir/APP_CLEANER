<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="CircularProgressIndicator">
        <attr name="progressColor" format="color" />
        <attr name="progressBackgroundColor" format="color" />
        <attr name="progressStrokeWidth" format="dimension" />
        <attr name="progressBackgroundStrokeWidth" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="formattingPattern" format="string|reference" />
        <attr name="drawDot" format="boolean" />
        <attr name="dotColor" format="color" />
        <attr name="dotWidth" format="dimension" />
        <attr name="startAngle" format="integer|reference" />
        <attr name="direction" format="enum">
            <enum name="clockwise" value="0" />
            <enum name="counterclockwise" value="1" />
        </attr>
        <attr name="progressCap" format="enum">
            <enum name="round" value="0" />
            <enum name="butt" value="1" />
        </attr>
        <attr name="enableProgressAnimation" format="boolean" />
        <attr name="fillBackground" format="boolean" />
        <attr name="gradientEndColor" format="color|reference"/>
        <attr name="gradientType" format="enum">
            <enum name="no_gradient" value="0"/>
            <enum name="linear" value="1"/>
            <enum name="radial" value="2"/>
            <enum name="sweep" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="LockPatternView">
        <attr name="aspect">
            <enum name="square" value="0" />
            <enum name="lockWidth" value="1" />
            <enum name="lockHeight" value="2" />
        </attr>
        <attr name="line" format="color" />
        <attr name="btnNormal" format="reference" />
        <attr name="btnTouched" format="reference" />
        <attr name="circleNormal" format="reference" />
        <attr name="circleGreen" format="reference" />
        <attr name="circleRed" format="reference" />
        <attr name="arrowGreenUp" format="reference" />
        <attr name="arrowRedUp" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension"/>
        <attr name="border_color2" format="color"/>
    </declare-styleable>

    <declare-styleable name="RotateLoading">
        <attr name="loading_width" format="dimension" />
        <attr name="loading_color" format="color" />
        <attr name="shadow_position" format="integer" />
        <attr name="loading_speed" format="integer" />
    </declare-styleable>

    <declare-styleable name="HorizontalProgressView">
        <attr name="progressTitle" format="reference" />
        <attr name="progressLineColor" format="color" />
        <attr name="progressMax" format="integer" />
        <attr name="progressValue" format="integer" />
    </declare-styleable>

</resources>